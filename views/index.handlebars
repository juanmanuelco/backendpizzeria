 <script src="../js/codigo.js"></script>
<script type="defer">  
recursion();
    function recursion(){
            var elem = document.getElementById("myBar");
        var width = 0;
        var id = setInterval(frame, 500);
        function frame() {
            if (width >= 100) {
                elem.style.width = '0%'; 
                document.getElementById('myBar').innerText=0;
                clearInterval(id);
                recursion();
                obtenerPedido()
            } else {
                width++; 
                document.getElementById('myBar').innerText='Buscando pedidos '+ width +'%';
                elem.style.width = width + '%'; 
            }
        }
    } 
 </script>
 <script>
    window.addEventListener('load',obtenerPedido());
</script>